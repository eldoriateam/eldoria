    <script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-auth-compat.js"></script>
    <script>
        const firebaseConfig = {
            apiKey: "AIzaSyAf4XkKKukT8iIShBeGVycuWDTpOZoYutA",
            authDomain: "eldoria-d8f4b.firebaseapp.com",
            projectId: "eldoria-d8f4b",
            storageBucket: "eldoria-d8f4b.firebasestorage.app",
            messagingSenderId: "451330040914",
            appId: "1:451330040914:web:25e74e43f210608af3eb8b"
        };
        firebase.initializeApp(firebaseConfig);

        firebase.auth().onAuthStateChanged(user => {
            if (user) {
                document.getElementById('welcome-message').textContent = `Bem-vindo(a), ${user.email.split('@')[0]}!`;
                document.getElementById('user-info').textContent = user.email;
            } else {
                window.location.href = "index.html"; 
            }
        });

        document.getElementById('logout-button').addEventListener('click', () => {
            firebase.auth().signOut()
                .then(() => {
                    window.location.href = "index.html";
                })
                .catch((error) => {
                    console.error("Erro ao fazer logout:", error);
                });
        });

        document.querySelectorAll('.action-button').forEach(button => {
            button.addEventListener('click', () => {
                const card = button.closest('.module-card');
                const module = card.dataset.module;
                
                const originalText = button.textContent;
                const originalIcon = button.innerHTML;
                
                button.innerHTML = '<div class="spinner"></div> Processando...';
                button.disabled = true;

                setTimeout(() => {
                    let newText = '';
                    let newIcon = '';
                    let messageText = '';
                    
                    if (module === 'consulta') {
                        newText = 'Concluído!';
                        newIcon = '<i class="fas fa-check"></i>';
                        messageText = 'Consulta realizada com sucesso.';
                    } else if (module === 'upload') {
                        newText = 'Concluído!';
                        newIcon = '<i class="fas fa-check"></i>';
                        messageText = 'Arquivo enviado para a nuvem.';
                    } else if (module === 'historico-acoes') {
                        newText = 'Atualizado!';
                        newIcon = '<i class="fas fa-check"></i>';
                        messageText = 'Histórico carregado.';
                    } else if (module === 'notas') {
                        newText = 'Salvo!';
                        newIcon = '<i class="fas fa-check"></i>';
                        messageText = 'Nota salva com sucesso.';
                    }
                    
                    button.innerHTML = `${newIcon} ${newText}`;
                    card.querySelector('p').textContent = messageText;
                    
                    setTimeout(() => {
                        button.innerHTML = originalIcon;
                        button.disabled = false;
                        card.querySelector('p').textContent = originalText;
                    }, 2000);
                    
                }, 1500);
            });
        });

        // Função para alternar as seções da página
        function changePage(pageId) {
            document.querySelectorAll('.nav-link').forEach(nav => nav.classList.remove('active'));
            document.querySelectorAll('.dashboard-page').forEach(page => page.classList.remove('active'));

            const targetLink = document.querySelector(`[data-page="${pageId}"]`);
            if (targetLink) {
                targetLink.classList.add('active');
            }
            
            document.getElementById(`page-${pageId}`).classList.add('active');
        }

        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                changePage(link.dataset.page);
            });
        });

        // Função para a barra de pesquisa
        document.getElementById('search-input').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                const query = e.target.value;
                if (query.trim() !== '') {
                    document.querySelectorAll('.dashboard-page').forEach(page => page.classList.remove('active'));
                    document.getElementById('page-painel').classList.add('active');
                    document.querySelector('#page-painel .welcome-card h3').textContent = `Resultados da pesquisa para "${query}"...`;
                    e.target.value = '';
                }
            }
        });

        // Garante que a página 'Painel' seja a primeira a aparecer
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelector('#page-painel').classList.add('active');
        });

        // Funções para os botões da Eldoria IA
        function showApiDocs() {
            alert('Documentação da API:\n\n' +
                'Não há API configurada no momento. Para a funcionalidade do chat, o código da API precisa ser inserido.');
        }

        // --- Funções do Chat sem API ---
        const chatForm = document.getElementById('chat-form');
        const chatInput = document.getElementById('chat-input');
        const chatMessages = document.getElementById('chat-messages');

        // Adiciona uma mensagem ao chat
        function addMessage(text, sender) {
            const messageDiv = document.createElement('div');
            messageDiv.textContent = text;
            messageDiv.classList.add('chat-message', sender);
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight; // Rola para o final
        }

        // Lida com o envio do formulário de chat (apenas para exibição)
        chatForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const userPrompt = chatInput.value.trim();

            if (userPrompt) {
                addMessage(userPrompt, 'user');
                chatInput.value = '';
                
                // Mensagem de exemplo que a IA responderia
                setTimeout(() => {
                    addMessage("Olá, sua mensagem foi recebida! Esta é uma resposta de demonstração, pois a API foi removida do código.", 'ai');
                }, 1000);
            }
        });
    </script>
